@model List<Product>
<h1>Products Admin Panel</h1>

<a class="btn btn-primary" asp-controller="Home" asp-action="Create">Create Product</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Image</th>
            <th scope="col">Title</th>
            <th scope="col">Price</th>
            <th scope="col">Category</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <th scope="row">@i.Id</th>
                <td>
                    <img height="50" src="@i.ImageUrl" />
                </td>
                <td>@i.Title</td>
                <td>@i.Price$</td>
                <td>@i.Category</td>
                <td>
                    <a class="btn btn-dark" asp-controller="Home" asp-action="Details" asp-route-id="@i.Id">View</a>
                    <a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@i.Id">Edit</a>
                    <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@i.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>